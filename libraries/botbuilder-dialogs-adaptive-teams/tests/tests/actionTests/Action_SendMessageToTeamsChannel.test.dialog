{
    "$schema": "../../../../botbuilder-dialogs-adaptive/tests/schema/test.schema",
    "$kind": "Microsoft.Test.Script",
    "enableTrace": true,
    "dialog": {
        "$kind": "Microsoft.AdaptiveDialog",
        "id": "planningTest",
        "triggers": [
            {
                "$kind": "Microsoft.OnUnknownIntent",
                "actions": [
                    {
                        "$kind": "Teams.SendMessageToTeamsChannel",
                        "conversationReferenceProperty": "$conversationReferenceProperty",
                        "activity": {
                            "type": "message",
                            "text": "This is a message to a Teams Channel"
                        }
                    },
                    {
                        "$kind": "Microsoft.TraceActivity",
                        "name": "sendResult",
                        "valueType": "memory",
                        "value": "=$conversationReferenceProperty"
                    }
                ]
            }
        ]
    },
    "script": [
        {
            "$kind": "Microsoft.Test.UserActivity",
            "activity": {
                "type": "message",
                "text": "hi",
                "channelData": {
                    "channel": {
                        "id": "fakeTeamsChannelToSendTo"
                    }
                }
            }
        },
        {
            "$kind": "Microsoft.Test.AssertReplyActivity",
            "assertions": [
                "value.activityId == '0'",
                "value.channelId == 'msteams'",
                "value.conversation.conversationType == 'groupChat'",
                "value.conversation.isGroup == true",
                "value.conversation.name == 'group'",
                "value.conversation.tenantId == 'tenantId-Guid'"
            ]
        }
    ]
}